def truncate_text(text):
    words = text.strip().split()
    if len(words) <= 3:
        return text  # don't truncate very short ones
    keep_ratio = random.uniform(0.1, 0.9)
    keep_len = max(1, int(len(words) * keep_ratio))
    truncated = ' '.join(words[:keep_len])
    return truncated

